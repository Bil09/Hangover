<div>
  <div>
  <%= form_with url: invitations_path, class: "search-form-control form-group", method: :post do |f| %>
    <%= f.text_field :email, placeholder: "Enter Location...", class: "form-control string required" %>
  <% end %>
  </div>
  <div>
    <div class="map-container">
      <div style="width: 100%; height: 115vh;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  </div>
</div>
